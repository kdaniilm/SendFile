<Window x:Class="SendFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="WhiteSmoke" MinWidth="250px" MinHeight="100px">
    <Grid>
        <Button Name="LoadBtn" Margin="50 100 50 250" FontSize="40px" Background="SkyBlue" Click="LoadClick">Load</Button>
        <Button Name="SendBtn" Margin="50 250 50 100" FontSize="40px" Background="SkyBlue" Click="SendClick">Send</Button>
    </Grid>
</Window>
